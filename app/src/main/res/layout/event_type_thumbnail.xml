<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_page"
    android:background="@drawable/neon_border_lightblue"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_margin="3dp"
        android:id="@+id/thumbnail_picture"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/thumb_brain_teasers"/>

    <RelativeLayout
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/event_type_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:paddingEnd="50dp"
            android:paddingStart="0dp"
            android:fontFamily="@font/azonix"
            android:shadowColor="#555555"
            android:shadowDx="4"
            android:shadowDy="5"
            android:shadowRadius="20"
            android:text="Brain Teaser"
            android:textColor="@color/light_font"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/event_counter_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="7dp"
            android:background="#A60C3B"
            android:orientation="vertical"
            android:padding="2dp">


            <TextView
                android:id="@+id/event_counter_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAlignment="center"
                android:textColor="#E8E6E6"
                android:textSize="21sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EVENTS"
                android:textAlignment="center"
                android:textColor="#E8E6E6"
                android:textSize="17sp" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_dive_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/event_counter_wrapper"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:background="@drawable/dive_in_btn_bg"
            android:minWidth="150dp"
            android:text="Dive In"
            android:textColor="#fff"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>
</FrameLayout>
